<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.6">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.4">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:padding="5dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_puzzle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_puzzle_bg1" />
            <ImageView
                android:id="@+id/iv_puzzle2"
                android:layout_width="wrap_content"
                android:layout_marginLeft="-23dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_puzzle1"
                android:src="@mipmap/img_puzzle_bg2" />
            <ImageView
                android:id="@+id/iv_puzzle3"
                android:layout_width="wrap_content"
                android:layout_marginLeft="-23dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_puzzle2"
                android:src="@mipmap/img_puzzle_bg2" />
            <ImageView
                android:id="@+id/iv_puzzle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-23dp"
                android:layout_below="@+id/iv_puzzle1"
                android:src="@mipmap/img_puzzle_bg4" />
            <ImageView
                android:id="@+id/iv_puzzle5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_puzzle2"
                android:layout_marginTop="-23dp"
                android:layout_marginLeft="-23dp"
                android:layout_toRightOf="@+id/iv_puzzle4"
                android:src="@mipmap/img_puzzle_bg5" />
            <ImageView
                android:id="@+id/iv_puzzle6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="-1dp"
                android:layout_below="@+id/iv_puzzle3"
                android:layout_toRightOf="@+id/iv_puzzle5"
                android:src="@mipmap/img_puzzle_bg6" />

            <ImageView
                android:id="@+id/iv_puzzle7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-23dp"
                android:layout_below="@+id/iv_puzzle4"
                android:src="@mipmap/img_puzzle_bg7" />

            <ImageView
                android:id="@+id/iv_puzzle8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-23dp"
                android:layout_below="@+id/iv_puzzle5"
                android:layout_toRightOf="@+id/iv_puzzle4"
                android:src="@mipmap/img_puzzle_bg8" />
            <ImageView
                android:id="@+id/iv_puzzle9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-23dp"
                android:layout_marginLeft="-20dp"
                android:layout_below="@+id/iv_puzzle6"
                android:layout_toRightOf="@+id/iv_puzzle8"
                android:src="@mipmap/img_puzzle_bg9" />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>